CREATE TABLE order_details (price DOUBLE, quantity INT, amount DOUBLE AS (price * quantity));
desc order_details ;
CREATE TABLE list (fid int not null auto_increment,name VARCHAR(20),price double, category VARCHAR(20),
    status varchar(45),photo varchar(45), PRIMARY KEY (fid));
ALTER TABLE list add discountpercent varchar(145) ;
ALTER TABLE list add COLUMN discountamount varchar(255)  AS (price * (discountpercent / 100)) ;
ALTER TABLE list ADD COLUMN finalprice varchar(255)  AS (price * (1-discountpercent / 100)) ;

create table cart(cid int not null auto_increment,fid int,uid int,fname varchar(255),price double,
totalprice double,primary key (cid));

select * from list where status="Active" and discountpercent>0;
