CREATE TABLE user(id int not null auto_increment, 
name varchar(25),phone varchar(25),email varchar(25),
password varchar(25),address varchar(25),landmark varchar(25),city varchar(25), 
state varchar(25), zip varchar(25),PRIMARY KEY (id));

